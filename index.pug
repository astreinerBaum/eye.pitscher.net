mixin carousel
  .imagebox
    .shadow
    .swiper-container-horizontal
      .swiper-wrapper
        block
      .swiper-scrollbar
    .shadow

mixin image(link)
  img.swiper-img.swiper-lazy(data-src=link)
  .swiper-lazy-preloader

mixin vSlide(hash)
  .swiper-slide(data-hash=hash)
    .inner-slide
      block

mixin hyperlink(link)
  a(target="_blank", href=link)
    block

